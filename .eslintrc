---

plugins:
  - react

extends:
  - eslint:recommended
  - plugin:react/recommended

parserOptions:
  sourceType: module
  ecmaFeatures:
    jsx: true
    experimentalObjectRestSpread: true

env:
  es6: true
  browser: true
  node: true
  jest: true

rules:
  react/prop-types: 0
  react/jsx-curly-spacing:
    - error
    - always
  object-curly-spacing:
    - error
    - always
